{
  "appId": "com.agrismart.ai",
  "appName": "AgriSmart AI",
  "webDir": "frontend",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https",
    "iosScheme": "https",
    "hostname": "agrismart.local"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0f172a",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": true,
      "spinnerColor": "#22c55e"
    },
    "StatusBar": {
      "style": "Dark",
      "backgroundColor": "#0f172a"
    },
    "Keyboard": {
      "resize": "body",
      "resizeOnFullScreen": true
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon",
      "iconColor": "#22c55e",
      "sound": "notification.wav"
    },
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    },
    "Geolocation": {
      "enableHighAccuracy": true
    },
    "Camera": {
      "saveToGallery": true
    },
    "Filesystem": {
      "directory": "Documents"
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": false,
    "buildOptions": {
      "keystorePath": "release-signing.keystore",
      "keystoreAlias": "agrismart"
    }
  },
  "ios": {
    "contentInset": "automatic",
    "allowsLinkPreview": true,
    "scrollEnabled": true
  }
}
