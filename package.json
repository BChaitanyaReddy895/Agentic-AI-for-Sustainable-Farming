{
  "name": "agrismart-ai",
  "version": "1.0.0",
  "description": "AI-powered farming assistant with voice support and offline capabilities for Indian farmers",
  "main": "backend/main.py",
  "scripts": {
    "start": "python -m http.server 3000 -d frontend",
    "backend": "python -m uvicorn backend.main:app --host 0.0.0.0 --port 8001",
    "dev": "concurrently \"npm run backend\" \"npm run start\"",
    "build:android": "npx cap add android && npx cap sync android && npx cap open android",
    "build:ios": "npx cap add ios && npx cap sync ios && npx cap open ios",
    "sync": "npx cap sync",
    "icons": "npx capacitor-assets generate"
  },
  "keywords": [
    "farming",
    "agriculture",
    "ai",
    "voice-assistant",
    "offline",
    "pwa",
    "india",
    "crop-recommendation",
    "weather",
    "pest-detection"
  ],
  "author": "AgriSmart Team",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/app": "^5.0.7",
    "@capacitor/camera": "^5.0.8",
    "@capacitor/core": "^5.7.0",
    "@capacitor/filesystem": "^5.2.1",
    "@capacitor/geolocation": "^5.0.7",
    "@capacitor/keyboard": "^5.0.8",
    "@capacitor/local-notifications": "^5.0.7",
    "@capacitor/network": "^5.0.7",
    "@capacitor/preferences": "^5.0.7",
    "@capacitor/push-notifications": "^5.1.1",
    "@capacitor/share": "^5.0.7",
    "@capacitor/splash-screen": "^5.0.7",
    "@capacitor/status-bar": "^5.0.7",
    "@capacitor/toast": "^5.0.7"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.4",
    "@capacitor/cli": "^5.7.0",
    "concurrently": "^8.2.2"
  },
  "capacitor": {
    "appId": "com.agrismart.ai",
    "appName": "AgriSmart AI",
    "webDir": "frontend"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agrismart/agrismart-ai.git"
  },
  "bugs": {
    "url": "https://github.com/agrismart/agrismart-ai/issues"
  },
  "homepage": "https://agrismart.ai"
}
